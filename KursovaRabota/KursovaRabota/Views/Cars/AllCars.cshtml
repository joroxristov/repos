@model IEnumerable<KursovaRabota.ViewModels.Cars.CarDetailsViewModel>;

@{
    ViewData["Title"] = "All cars";
}
<h1>All cars</h1>

<button class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Cars")'">Create new </button>

<div class="cars">
    @foreach (var item in Model)
    {
        <div class="car">
            <div class="img" style="background-image: url(@item.ImageUrl)"></div>
            <div class="info">
                <div class="brand">@item.Brand.BrandName</div>
                <div class="title">
                    @Html.ActionLink(@item.Name, "Details", new { CarId=item.Id })
                </div>
                <div class="price">@item.Price BGN</div>
                <div class="actions">
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Cars", new { CarId=item.Id })'">Edit </button>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Delete", "Cars", new { CarId=item.Id })'">Delete</button>
                </div>
            </div>
        </div>
    }
</div>