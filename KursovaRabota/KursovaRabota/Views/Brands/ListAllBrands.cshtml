@model ICollection<KursovaRabota.ViewModels.Brands.BrandDetailViewModel>

@{
    ViewData["Title"] = "Brands";
}

<button class="btn btn-primary" onclick="location.href='@Url.Action("Edit")'">Create new </button>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Supplier</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@Html.ActionLink(@item.BrandName, "Details", new { BrandId =  item.Id })</td>
                <td>
                    <div class="actions">
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Brands", new { BrandId = item.Id })'">Edit</button>
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("Delete", "Brands", new { BrandId = item.Id })'">Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>